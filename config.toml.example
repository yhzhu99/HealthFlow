# HealthFlow Configuration

# Select the active LLM provider for agent reasoning and evaluation
active_llm = "deepseek-v3"

# LLM Provider Configurations
# All agents and the shared LLMTaskEvaluator use the same provider for consistency

[llm.openai]
base_url = "https://api.openai.com/v1"
api_key = "YOUR_OPENAI_API_KEY"
model_name = "gpt-4-turbo-preview"

[llm.deepseek-v3]
base_url = "https://api.deepseek.com/v1"
api_key = "YOUR_DEEPSEEK_API_KEY"
model_name = "deepseek-chat"

[llm.deepseek-r1]
base_url = "https://api.deepseek.com/v1"
api_key = "YOUR_DEEPSEEK_API_KEY"
model_name = "deepseek-reasoner"

# Data Storage Configuration for Self-Evolution
[data]
data_dir = "./data"
experience_dir = "./data/experience" # Stores the experience bank
evolution_dir = "./data/evolution"   # Stores evolving prompts for meta-agents
tasks_dir = "./data/tasks"           # Directory for temporary task files

# Meta-System Configuration
[system]
max_feedback_rounds = 3      # Max refinement iterations per task
success_threshold = 8.0      # Score (out of 10) to consider a task successful
retrieve_top_k_experiences = 5 # Number of experiences to retrieve for context

# Logging Configuration
[logging]
log_level = "INFO" # INFO, DEBUG, WARNING, ERROR
log_format = "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
log_file = "healthflow.log"